{
  "name": "recon-tools",
  "version": "1.0.0",
  "description": "Cloud-Native Security Analysis Tools",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatrickWake/recon-tools.git"
  },
  "keywords": [
    "security",
    "analysis",
    "tools"
  ],
  "author": "Patrick Wake",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatrickWake/recon-tools/issues"
  },
  "homepage": "https://github.com/PatrickWake/recon-tools#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/tests/setup.js"],
    "moduleDirectories": ["node_modules", "docs/js"],
    "collectCoverageFrom": [
      "docs/js/**/*.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
} 