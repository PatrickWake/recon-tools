{
  "name": "recon-tools",
  "version": "1.0.0",
  "description": "Cloud-Native Security Analysis Tools",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:e2e": "playwright test",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PatrickWake/recon-tools.git"
  },
  "keywords": [
    "security",
    "analysis",
    "tools"
  ],
  "author": "Patrick Wake",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/PatrickWake/recon-tools/issues"
  },
  "homepage": "https://github.com/PatrickWake/recon-tools#readme",
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@playwright/test": "^1.42.1",
    "eslint": "^8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "serve": "^14.2.1",
    "whatwg-fetch": "^3.6.20"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": ["<rootDir>/tests/setup.js"],
    "moduleDirectories": ["node_modules", "docs/js"],
    "collectCoverageFrom": [
      "docs/js/**/*.js"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  }
} 